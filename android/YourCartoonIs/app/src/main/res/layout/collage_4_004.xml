<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="560dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Collage.Collage_4_004"
    android:background="#FFFFFF"
    >
    <!-- 주석 내용 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        <com.e.yourcartoonis.MyDiagonal
            android:id="@+id/c1"
            android:layout_width="220dp"
            android:layout_height="250dp"

            android:background="#FFFFFF"
            android:translationX="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/c2"
            app:layout_constraintTop_toTopOf="parent"
            app:shape_diagonal_angle="10"
            app:shape_diagonal_direction="right"
            app:shape_diagonal_position="right">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#808080"/>
        </com.e.yourcartoonis.MyDiagonal>

        <com.e.yourcartoonis.MyDiagonal
            android:id="@+id/c2"
            android:layout_width="210dp"
            android:layout_height="250dp"
            android:translationX="-10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/c1"
            app:layout_constraintRight_toRightOf="parent"
            app:shape_diagonal_angle="10"
            app:shape_diagonal_direction="right"
            app:shape_diagonal_position="left">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#808080"/>
        </com.e.yourcartoonis.MyDiagonal>


        <com.e.yourcartoonis.MyDiagonal
            android:id="@+id/c3"
            android:layout_width="220dp"
            android:layout_height="250dp"

            android:layout_marginTop="30dp"
            android:background="#FFFFFF"
            android:translationX="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/c4"
            app:layout_constraintTop_toBottomOf="@id/c1"
            app:shape_diagonal_angle="10"
            app:shape_diagonal_direction="right"
            app:shape_diagonal_position="right">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#808080"/>
        </com.e.yourcartoonis.MyDiagonal>

        <com.e.yourcartoonis.MyDiagonal
            android:id="@+id/c4"
            android:layout_width="210dp"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:translationX="-10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/c3"
            app:layout_constraintTop_toBottomOf="@id/c2"
            app:shape_diagonal_angle="10"
            app:shape_diagonal_direction="right"
            app:shape_diagonal_position="left">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#808080"/>
        </com.e.yourcartoonis.MyDiagonal>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>