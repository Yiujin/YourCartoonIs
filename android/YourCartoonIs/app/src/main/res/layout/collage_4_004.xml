<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Collage.Collage_4_004">
    <!-- 주석 내용 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.florent37.shapeofview.shapes.DiagonalView
            android:id="@+id/c1"
            android:layout_width="220dp"
            android:layout_height="250dp"

            android:background="#FFFFFF"
            android:translationX="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/c2"
            app:layout_constraintTop_toTopOf="parent"
            app:shape_diagonal_angle="10"
            app:shape_diagonal_direction="right"
            app:shape_diagonal_position="right">

            <ScrollView
                android:id="@+id/scroll1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"></ScrollView>
        </com.github.florent37.shapeofview.shapes.DiagonalView>

        <com.github.florent37.shapeofview.shapes.DiagonalView
            android:id="@+id/c2"
            android:layout_width="210dp"
            android:layout_height="250dp"
            android:translationX="-10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/c1"
            app:layout_constraintRight_toRightOf="parent"
            app:shape_diagonal_angle="10"
            app:shape_diagonal_direction="right"
            app:shape_diagonal_position="left">

            <ScrollView
                android:id="@+id/scroll2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"></ScrollView>
        </com.github.florent37.shapeofview.shapes.DiagonalView>


        <com.github.florent37.shapeofview.shapes.DiagonalView
            android:id="@+id/c3"
            android:layout_width="220dp"
            android:layout_height="250dp"

            android:layout_marginTop="30dp"
            android:background="#FFFFFF"
            android:translationX="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/c4"
            app:layout_constraintTop_toBottomOf="@id/c1"
            app:shape_diagonal_angle="10"
            app:shape_diagonal_direction="right"
            app:shape_diagonal_position="right">

            <ScrollView
                android:id="@+id/scroll3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"></ScrollView>
        </com.github.florent37.shapeofview.shapes.DiagonalView>

        <com.github.florent37.shapeofview.shapes.DiagonalView
            android:id="@+id/c4"
            android:layout_width="210dp"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:translationX="-10dp"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toRightOf="@id/c3"
            app:layout_constraintTop_toBottomOf="@id/c2"
            app:shape_diagonal_angle="10"
            app:shape_diagonal_direction="right"
            app:shape_diagonal_position="left">

            <ScrollView
                android:id="@+id/scroll4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"></ScrollView>
        </com.github.florent37.shapeofview.shapes.DiagonalView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>