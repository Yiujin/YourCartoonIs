<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/Layout_Button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:visibility="invisible"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/next_Button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:src="@drawable/speech_bubbles"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@null"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/sticker_done"
            android:visibility="invisible"
            android:layout_gravity="right"
            android:text="Done" />
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/save"
            android:visibility="invisible"
            android:layout_gravity="right"
            android:src="@drawable/save_icon"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="@null"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fragment1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="130dp"
        android:layout_marginTop="50dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:layout_constraintTop_toBottomOf="@id/fragment1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/pastel1">

        <LinearLayout
            android:id="@+id/fragment3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fragment1">
            <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <ImageButton
                    android:id="@+id/im_frag"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="left"
                    android:src="@drawable/gallery_icon"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="@null"/>
                <ImageButton
                    android:id="@+id/col_frag"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="left"
                    android:src="@drawable/collage_icon"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="@null"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/fragment_img"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                />
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/sticker_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:background="@color/pastel1">
            </LinearLayout>
        </HorizontalScrollView>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>